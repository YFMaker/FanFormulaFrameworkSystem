@model InterfaceState
@{
    InterFaceStateList InterFaces = (InterFaceStateList)ViewData["InterFaces"];
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Admin Dashboard Template">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">
    <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->

    <!-- Styles -->
    <link href="~/css/css.css" rel="stylesheet">
    <link href="~/css/icon.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/all.min.css" rel="stylesheet">
    <link href="~/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/css/pace.css" rel="stylesheet">


    <!-- Theme Styles -->
    <link href="~/css/main.min.css" rel="stylesheet">
    <link href="~/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="page-sidebar-collapsed">


    <div class="page-container">
        <div class="page-sidebar">
            <a class="logo" href="#">T</a>
            <ul class="list-unstyled accordion-menu">
                <li class="active-page">
                    <a href="#" class="active"><i data-feather="aperture"></i>信息<i class="fas fa-chevron-right dropdown-icon"></i></a>
                    <ul class="">
                        <li><i class="far fa-circle"></i>主页</a></li>
                    </ul>
                </li>

            </ul>
            <a href="#" id="sidebar-collapsed-toggle"><i data-feather="arrow-right"></i></a>
        </div>
        <div class="page-content">
            <div class="page-header">
                <nav class="navbar navbar-expand-lg d-flex justify-content-between">
                    <div class="header-title flex-fill">
                        <a href="#" id="sidebar-toggle"><i data-feather="arrow-left"></i></a>
                        <h5>@ViewData["Title"]</h5>
                    </div>
                </nav>
            </div>
            <div class="main-wrapper">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@ViewData["Title"]</h5>
                                <p class="card-description">@ViewData["TitleOther"]</p>
                                <p class="card-description" style="color:red">@ViewData["Message"]</p>
                                <div class="row">
                                    <div class="table-responsive">
                                        <table class="table invoice-table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">接口名称</th>
                                                    <th scope="col">接口状态</th>
                                                    <th scope="col">操作</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    if (InterFaces.interfaceStates.Count > 0)
                                                    {
                                                        foreach (var item in InterFaces.interfaceStates)
                                                        {
                                                            <tr>
                                                                <th scope="row">@item.InterFaceName</th>
                                                                <td>@(item.InterFaceStated==true?"运行中":"未运行")</td>
                                                                <form asp-controller="Home" asp-action="EditInterFace" method="get">
                                                                <td>
                                                                    <input asp-for="Businesskey" type="text" value=@item.Businesskey hidden="hidden" />
                                                                    <input asp-for="InterFaceName" type="text" value=@item.InterFaceName hidden="hidden" />
                                                                    <input asp-for="InterFaceStated" type="text" value=@item.InterFaceStated hidden="hidden" />
                                                                    <button type="submit" class="btn btn-primary">@(item.InterFaceStated == true ? "关闭" : "打开")</button>
                                                                </td>
                                                                </form>
                                                            </tr>
                                                        }
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="activity-sidebar-overlay"></div>

    <!-- Javascripts -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/core@2.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/feather-icons.js"></script>
    <script src="~/js/perfect-scrollbar.min.js"></script>
    <script src="~/js/pace.min.js"></script>
    <script src="~/js/main.min.js"></script>
</body>